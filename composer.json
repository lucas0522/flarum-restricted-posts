{
    "name": "hertz-dev/restricted-posts",
    "description": "Allow post authors to mark their posts as restricted content",
    "keywords": [
        "flarum",
        "extension",
        "posts",
        "restricted",
        "content"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8.0",
        "php": "^8.1"
    },
    "authors": [
        {
            "name": "Hertz",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hertz\\RestrictedPosts\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Restricted Posts",
            "category": "feature",
            "icon": {
                "name": "fas fa-lock",
                "color": "#e74c3c",
                "backgroundColor": "#fff"
            }
        }
    }
}